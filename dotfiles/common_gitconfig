# -*- coding: utf-8; mode: conf -*-

# NOTE: this file is include thanks to the
#   [include]
#   path = main_gitconfig
# feature. Git >= 1.7.10

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = always
[pager]
	status = true
[push]
        default = current
[alias]
	wdiff = diff --color-words
	st = status
	ci = commit
        cf = commit --fixup
        civ = commit --no-verify
	ca = commit --amend
        co = checkout
        sl = stash list
	l = log
        # ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
        la = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --all
        ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
        ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
        le = log --oneline --decorate
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset' --abbrev-commit
        # lg = log --pretty=oneline --decorate --graph --abbrev-commit
        logtree = log --graph --oneline --decorate --all
        fp = fetch --prune
        r = rebase
        ri = rebase --interactive
        rs = rebase --interactive --autosquash
        rc = rebase --continue
        ra = rebase --abort
        grep = grep -Ii
        lasttag = describe --tags --abbrev=0
        d = diff
        dc = diff --cached
